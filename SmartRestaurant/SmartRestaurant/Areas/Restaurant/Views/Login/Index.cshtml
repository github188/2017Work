<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>用户登录</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.css"><!--布局样式-->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--dialog begin-->
    <link href="~/Content/restaurant/dialog/bootstrap-dialog.css" rel="stylesheet" type="text/css" />
    <script src="~/Content/restaurant/dialog/bootstrap-dialog.js"></script>
    <!--dialog end-->
    <script src="~/Content/restaurant/other/dialog/dialog-common.js"></script><!-- 消息dialog -->
    <style>
        html {
            width:100%;
            height:100%;
            background: linear-gradient(141deg, #0fb8ad 0%, #76f1ff 51%, #2cb5e8 75%);
            /*background-size:100% 100%;*/
        }
        body{
            background-color:rgba(0,0,0,0);
        }
        .mycenter{
            margin-top: 100px;
            margin-left: auto;
            margin-right: auto;
            height: 350px;
            width:500px;
            padding: 5%;
            padding-left: 5%;
            padding-right: 5%;
        }
        .mycenter mysign{
            width: 440px;
        }
        .mycenter input,checkbox,button{
            margin-top:2%;
            margin-left: 10%;
            margin-right: 10%;
        }
        .mycheckbox{
            margin-top:10px;
            margin-left: 40px;
            margin-bottom: 10px;
            height: 10px;
        }
    </style>
</head>
<body>
    <form id="team">
        <div class="mycenter">
            <div class="mysign">
                <div class="col-lg-11 text-center text-info">
                    <h2>请登录</h2>
                </div>
                <div class="col-lg-10">
                    <input type="text" class="form-control" name="username" placeholder="请输入账户名" required autofocus />
                </div>
                <div class="col-lg-10"></div>
                <div class="col-lg-10">
                    <input type="password" class="form-control" name="password" placeholder="请输入密码" required autofocus />
                </div>
                <div class="col-lg-10"></div>
                <div class="col-lg-10 mycheckbox checkbox">
                    <input type="checkbox" class="col-lg-1">记住密码
                </div>
                <div class="col-lg-10"></div>
                <div class="col-lg-10">
                    <button onclick="logining()" type="button" class="btn btn-success col-lg-12">登录</button>
                </div>
            </div>
        </div>
    </form>
    <script>
        function logining() {
            var data = $("#team").serialize();
            $.ajax({
                type: "POST",
                url: 'Login/Logining',
                data: data,
                dataType: "json",
                success: function (result) {
                    if (result.result == "success") {
                        success_dialog("登陆成功");
                        window.location.href = "http://localhost:60922/";
                    }
                    else {
                        danger_dialog("登陆失败");
                    }
                },
                error: function () {
                    error();
                }
            });
        }
    </script>
</body>
</html>